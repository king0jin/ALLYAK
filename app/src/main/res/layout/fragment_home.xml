<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    tools:context=".HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:text="약 찾기"
            android:fontFamily="@font/notoebold"
            android:textColor="@color/black"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:textSize="35dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/searchSymptom"
                android:layout_width="145dp"
                android:layout_height="161dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                app:cardElevation="6dp"
                app:cardCornerRadius="7dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="33dp"
                    android:src="@drawable/ic_csearch"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="93dp"
                    android:layout_marginEnd="5dp"
                    android:text="증상으로 검색"
                    android:textSize="19dp"
                    android:fontFamily="@font/notoebold"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="155dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/searchName"
                        android:layout_width="145dp"
                        android:layout_height="77dp"
                        android:layout_marginTop="12dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="7dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="52dp"
                                android:layout_marginTop="14dp"
                                android:layout_marginEnd="53dp"
                                android:src="@drawable/ic_caa"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="43dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginEnd="44dp"
                                android:fontFamily="@font/notoebold"
                                android:textColor="@color/black"
                                android:text="이름으로 검색"
                                android:textSize="17dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/searchShape"
                        android:layout_width="145dp"
                        android:layout_height="77dp"
                        android:layout_marginTop="7dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="7dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="48dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginEnd="49dp"
                                android:src="@drawable/ic_cpill"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="43dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginEnd="43dp"
                                android:fontFamily="@font/notoebold"
                                android:text="모양으로 검색"
                                android:textColor="@color/black"
                                android:textSize="17dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="Today"
            android:fontFamily="@font/notoebold"
            android:textColor="@color/black"
            android:layout_marginLeft="55dp"
            android:textSize="25dp"/>
        <LinearLayout
            android:id="@+id/todayList"
            android:layout_width="304dp"
            android:layout_height="160dp"
            android:layout_marginLeft="53dp"
            android:background="@drawable/rect1">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todayRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scrollbars="none"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>