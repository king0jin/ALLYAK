<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/maincolor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="약 찾기"
        android:fontFamily="@font/notoebold"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식별 문자"
            android:textSize="18sp"
            android:fontFamily="@font/notomedium"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/pillText"
            android:layout_width="210dp"
            android:layout_height="43dp"
            android:inputType="text"
            android:background="@drawable/rect1"
            android:layout_marginLeft="14dp"
            android:textSize="13sp"
            android:hint="약에 적힌 글자 혹은 숫자"
            android:paddingStart="10dp"/>
    </LinearLayout>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제형"
            android:textSize="18sp"
            android:fontFamily="@font/notomedium"
            android:textColor="@color/black"/>
        <ToggleButton
            android:id="@+id/type1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:textOn="정제"
            android:textOff="정제"
            android:textSize="13sp"
            android:background="@drawable/shape_button_selector"/>
        <ToggleButton
            android:id="@+id/type2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textOn="경질캡슐"
            android:textOff="경질캡슐"
            android:textSize="13sp"
            android:background="@drawable/shape_button_selector"/>
        <ToggleButton
            android:id="@+id/type3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textOn="연질캡슐"
            android:textOff="연질캡슐"
            android:textSize="13sp"
            android:background="@drawable/shape_button_selector"/>
        <ToggleButton
            android:id="@+id/type4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textOn="기타"
            android:textOff="기타"
            android:textSize="13sp"
            android:background="@drawable/shape_button_selector"/>
        <ToggleButton
            android:id="@+id/typeAll"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textOn="전체"
            android:textOff="전체"
            android:textSize="13sp"
            android:background="@drawable/shape_button_selector"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모양"
            android:textSize="18sp"
            android:fontFamily="@font/notomedium"
            android:textColor="@color/black"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ToggleButton
                    android:id="@+id/shape1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/black"
                    android:textOn="원형"
                    android:textOff="원형"
                    android:textSize="13sp"
                    android:background="@drawable/shape_button_selector"/>
                <ToggleButton
                    android:id="@+id/shape2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textOn="타원형"
                    android:textOff="타원형"
                    android:textSize="13sp"
                    android:background="@drawable/shape_button_selector"/>
                <ToggleButton
                    android:id="@+id/shape3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textOn="장방형"
                    android:textOff="장방형"
                    android:textSize="13sp"
                    android:background="@drawable/shape_button_selector"/>
                <ToggleButton
                    android:id="@+id/shape4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textOn="삼각형"
                    android:textOff="삼각형"
                    android:textSize="13sp"
                    android:background="@drawable/shape_button_selector"/>
                <ToggleButton
                    android:id="@+id/shape5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textOn="사각형"
                    android:textOff="사각형"
                    android:textSize="13sp"
                    android:background="@drawable/shape_button_selector"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                    <ToggleButton
                        android:id="@+id/shape6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/black"
                        android:textOn="오각형"
                        android:textOff="오각형"
                        android:textSize="13sp"
                        android:background="@drawable/shape_button_selector"/>
                    <ToggleButton
                        android:id="@+id/shape7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textOn="육각형"
                        android:textOff="육각형"
                        android:textSize="13sp"
                        android:background="@drawable/shape_button_selector"/>
                    <ToggleButton
                        android:id="@+id/shape8"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textOn="팔각형"
                        android:textOff="팔각형"
                        android:textSize="13sp"
                        android:background="@drawable/shape_button_selector"/>
                    <ToggleButton
                        android:id="@+id/shapeEtc"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textOn="기타"
                        android:textOff="기타"
                        android:textSize="13sp"
                        android:background="@drawable/shape_button_selector"/>
                    <ToggleButton
                        android:id="@+id/shapeAll"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textOn="전체"
                        android:textOff="전체"
                        android:textSize="13sp"
                        android:background="@drawable/shape_button_selector"/>
                </LinearLayout>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="색상"
            android:textSize="18sp"
            android:fontFamily="@font/notomedium"
            android:textColor="@color/black"/>
        <RadioGroup
            android:id="@+id/color_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ToggleButton
                    android:id="@+id/c_white"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/c_white1"/>
                <ToggleButton
                    android:id="@+id/c_yellow"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_yellow1"/>
                <ToggleButton
                    android:id="@+id/c_orange"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_orange1"/>
                <ToggleButton
                    android:id="@+id/c_pink"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_pink1"/>
                <ToggleButton
                    android:id="@+id/c_red"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_red1"/>
                <ToggleButton
                    android:id="@+id/c_brown"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_brown1"/>
                <ToggleButton
                    android:id="@+id/c_ygreen"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_ygreen1"/>
                <ToggleButton
                    android:id="@+id/c_green"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_green1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ToggleButton
                    android:id="@+id/c_bgreen"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/c_bgreen1"/>
                <ToggleButton
                    android:id="@+id/c_blue"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_blue1"/>
                <ToggleButton
                    android:id="@+id/c_navy"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_navy1"/>
                <ToggleButton
                    android:id="@+id/c_violet"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_violet1"/>
                <ToggleButton
                    android:id="@+id/c_purple"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_purple1"/>
                <ToggleButton
                    android:id="@+id/c_gray"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_gray1"/>
                <ToggleButton
                    android:id="@+id/c_black"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_black1"/>
                <ToggleButton
                    android:id="@+id/c_none"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/c_none1"/>
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분할선"
                android:textSize="18sp"
                android:fontFamily="@font/notomedium"
                android:textColor="@color/black"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ToggleButton
                android:id="@+id/lineNone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="14dp"
                android:textColor="@color/black"
                android:textOn="없음"
                android:textOff="없음"
                android:textSize="13sp"
                android:background="@drawable/shape_button_selector" />
            <ToggleButton
                android:id="@+id/linePlus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textOn="+"
                android:textOff="+"
                android:textSize="15sp"
                android:background="@drawable/shape_button_selector" />
            <ToggleButton
                android:id="@+id/lineMinus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textOn="-"
                android:textOff="-"
                android:textSize="15sp"
                android:background="@drawable/shape_button_selector" />
            <ToggleButton
                android:id="@+id/lineEtc"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textOn="기타"
                android:textOff="기타"
                android:textSize="13sp"
                android:background="@drawable/shape_button_selector" />
            <ToggleButton
                android:id="@+id/lineAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textOn="전체"
                android:textOff="전체"
                android:textSize="13sp"
                android:background="@drawable/shape_button_selector" />
        </RadioGroup>
    </LinearLayout>
    <Button
        android:id="@+id/pillSearchBtn"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:text="검색"
        android:fontFamily="@font/notobold"
        android:background="@drawable/buttonround2"
        android:textColor="#FFFFFF"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="290dp" />
</LinearLayout>