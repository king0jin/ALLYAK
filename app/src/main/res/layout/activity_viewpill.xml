<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/maincolor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/pillImg"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:background="#E1E1E1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pillName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notobold"
                android:text="한국 알약명"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/entpName"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notomedium"
                android:text="기업명"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mvPillinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notomedium"
            android:text="알약정보"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/mvReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notomedium"
            android:text="후기"
            android:layout_marginLeft="120dp"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/pillReviewBtn"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:text="증상 추가"
        android:fontFamily="@font/notobold"
        android:background="@drawable/buttonround2"
        android:textColor="#FFFFFF"
        android:layout_marginTop="310dp"
        android:layout_gravity="center" />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/pillInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notobold"
                android:text="• 효능"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/efcyQesitm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notomedium"
                android:text="효능상세"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notobold"
                android:text="• 사용법"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/useMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notomedium"
                android:text="사용법 상세"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notobold"
                android:text="• 주의사항"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/useWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notomedium"
                android:text="주의사항 상세"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notobold"
                android:text="• 경고"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/testText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notomedium"
                android:text="주의사항 경고"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notobold"
                android:text="• 부작용"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sideEffect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notomedium"
                android:text="부작용 상세"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notobold"
                android:text="• 보관방법"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/depositMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notomedium"
                android:text="보관방법 상세"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/pillReview"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/little_pill"/>
        </LinearLayout>
    </ScrollView>
    </FrameLayout>
</LinearLayout>