<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/maincolor"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:minHeight="65dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rect2"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/viewTitle"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/notobold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/viewTime"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/notomedium"
                    android:textSize="11sp"/>
                <ImageView
                    android:id="@+id/viewEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_edit"/>
            </LinearLayout>
            <TextView
                android:id="@+id/viewContent"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:textColor="@color/black"
                android:fontFamily="@font/notobold"
                android:paddingStart="15dp"
                android:background="@drawable/rect2"/>
            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/viewLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heart"/>
                <TextView
                    android:id="@+id/viewLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notomedium"
                    android:text="0"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/viewCommentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notomedium"
                    android:text="0"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/commentRecyclerView"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:background="@drawable/rect2"/>
            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
            <EditText
                android:id="@+id/writeComment"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="댓글을 입력하세요"
                android:paddingStart="10dp"
                android:minHeight="48dp"
                android:background="@drawable/rect2"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/writeCommentBtn"
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_write"
                    android:background="@drawable/rect2"
                    android:backgroundTint="@color/maincolor"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>